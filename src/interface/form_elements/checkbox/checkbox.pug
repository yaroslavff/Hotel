mixin expandableCheckButton(options)
    -
        let isChecked = false
        if(options.isChecked == true) {
            isChecked = true
        }

        let checkField = ("checkbox")
        if(Boolean(options.checkField) == true) {
            checkField += ` ${options.checkField}`
        } else {
            checkField = checkField
        }
        
        let checkboxPanel = "checkbox__wrapper hidden-content"
            dataPanel = "close"
            breakfast = ""
            table = ""
            childSeat = ""
            babyBed = ""
            tv = ""
            shampoo = ""
        if(options.panel === true) {
            checkboxPanel = "checkbox__wrapper"
        } if(options.dataPanel === true) {
            dataPanel = "open"
            breakfast = "breakfast"
            table = "table"
            childSeat = "children-seat"
            babyBed = "baby-bed"
            tv = "TV"
            shampoo = "shampoo"
        }

    div(class = checkField, data-checkbox-panel = dataPanel)
        div(class = "checkbox__title")
            h3(class = "main-title")= options.title
            div(class = "arrow")
                div(class = "arrow__list")
        div(class = checkboxPanel)
            +checkItem({id: breakfast, text: "Завтрак"})
            +checkItem({id: table, text: "Письменный стол", checked: isChecked})
            +checkItem({id: childSeat, text: "Стул для кормления", checked: isChecked})
            +checkItem({id: babyBed, text: "Кроватка", checked: isChecked})
            +checkItem({id: tv, text: "Телевизор"})
            +checkItem({id: shampoo, text: "Шампунь"})