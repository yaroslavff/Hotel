mixin checkButton(options)
    -
        let isChecked = false
        if(options.isChecked == true) {
            isChecked = true
        }

        let checkField = ("checkbox")
        if(Boolean(options.checkField) == true) {
            checkField += ` ${options.checkField}`
        } else {
            checkField = checkField
        }

    div(class = checkField)
        h3(class = "checkbox__title main-title")= options.title
        .checkbox__wrapper
            input(type = "checkbox", id = "smoking", class = "checkbox__input")
            label(for = "smoking", class = "checkbox__descr")
                span Можно курить

            input(type = "checkbox", id = "pets", class = "checkbox__input", checked = isChecked)
            label(for = "pets", class = "checkbox__descr")
                span Можно с питомцами

            input(type = "checkbox", id = "frends", class = "checkbox__input", checked = isChecked)
            label(for = "frends", class = "checkbox__descr")
                span  
                    |Можно пригласить гостей
                    br
                    |(до 10 человек)

