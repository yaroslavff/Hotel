mixin inputField(options)
    -
        let inputField = ("input")
        if(Boolean(options.inputField) == true) {
            inputField += ` ${options.inputField}`
        } else {
            inputField = inputField
        }

        let inputClass = ("input__content")
        if(Boolean(options.inputClass) == true) {
            inputClass += ` ${options.inputClass}`
        } else {
            inputClass = inputClass
        }

    div(class = inputField)
        .input__description
            h3.main-title= options.title
            span(class = "input__subtitle")= options.subtitle
        input(name = options.name, class = inputClass, type = options.type, placeholder = options.placeholder, id = options.id)

mixin dropdawnField(options)
    -
        let dropdawnField = "input dropdawn"
        if(Boolean(options.dropdawnField) == true) {
            dropdawnField += ` ${options.dropdawnField}`
        } else {
            dropdawnField = dropdawnField
        }

        let inputClass = "input__content js-input__content"
        if(Boolean(options.inputClass) == true) {
            inputClass += ` ${options.inputClass}`
        } else {
            inputClass = inputClass
        }

        let firstChoice = "спальни"
            secondChoice = "кровати"
            thirdChoice = "ванные комнаты"
            disButton = false
            choiceBtn = "hidden-content"
        let dropdawnData = false
        if(options.dropdawnAmenitiesData == true) {
            dropdawnData = "amenities"
        } if(options.dropdawnGuestData == true) {
            disButton = true
            dropdawnData = "guest"
            firstChoice = "взрослые"
            secondChoice = "дети"
            thirdChoice = "младенцы"
            choiceBtn = "choice-button"
        }

        let panel = "hidden-content js-dropdawn-panel"
        if(options.panel == true) {
            panel = "dropdawn-panel js-dropdawn-panel"
        }

    div(class = dropdawnField, data-dropdawn = dropdawnData)
        .input__description
            h3.main-title= options.title
            span(class = "input__subtitle")= options.subtitle
        div(class = inputClass)
            div(class = "dropdawn__field")
                span(class = "js-input-text", id = options.id)= options.text
                div(class = "arrow")
                    div(class = "arrow__list")
        div(class = `${panel} ${options.inputClass}`)
            .dropdawn-panel__wrapper
                div(class = "dropdawn-panel__content counter")
                    div
                        span(class = "main-title")= firstChoice
                    div(class = "counter__content js-counter__content")
                        button(class = "counter__min js-counter__min bedroom-min", disabled = disButton) -
                        span(class = "counter__num js-counter__num main-title") 2
                        button(class = "counter__max js-counter__max bedroom-max") +
                div(class = "dropdawn-panel__content counter")
                    div
                        span(class = "main-title")= secondChoice
                    div(class = "counter__content js-counter__content")
                        button(class = "counter__min js-counter__min bed-min", disabled = disButton) -
                        span(class = "counter__num js-counter__num main-title") 2
                        button(class = "counter__max js-counter__max bed-max") +
                div(class = "dropdawn-panel__content counter")
                    div
                        span(class = "main-title")= thirdChoice
                    div(class = "counter__content js-counter__content")
                        button(class = "counter__min js-counter__min bathroom-min", disabled = true) -
                        span(class = "counter__num js-counter__num main-title") 0
                        button(class = "counter__max js-counter__max bathroom-max") +
                div(class = choiceBtn)
                    button(class = "choice-button__decline") очистить
                    button(class = "choice-button__accept") применить

