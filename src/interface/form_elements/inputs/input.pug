mixin inputField(options)
    -
        let inputField = ("input")
        if(Boolean(options.inputField) == true) {
            inputField += ` ${options.inputField}`
        } else {
            inputField = inputField
        }

        let inputClass = ("input__content")
        if(Boolean(options.inputClass) == true) {
            inputClass += ` ${options.inputClass}`
        } else {
            inputClass = inputClass
        }

    div(class = inputField)
        .input__description
            h3.main-title= options.title
            span(class = "input__subtitle")= options.subtitle
        input(name = options.name, class = inputClass, type = options.type, placeholder = options.placeholder, id = options.id)

mixin dropdawnField(options)
    -
        let dropdawnField = ("input dropdawn")
        if(Boolean(options.dropdawnField) == true) {
            dropdawnField += ` ${options.dropdawnField}`
        } else {
            dropdawnField = dropdawnField
        }

        let inputClass = ("input__content")
        if(Boolean(options.inputClass) == true) {
            inputClass += ` ${options.inputClass}`
        } else {
            inputClass = inputClass
        }

    div(class = dropdawnField)
        .input__description
            h3.main-title= options.title
            span(class = "input__subtitle")= options.subtitle
        div(class = inputClass)
            div(class = "dropdawn__field")
                div(name = options.name, class = options.dropdawnClass, id = options.id)= options.placeholder
                div(class = "arrow")
                    div(class = "arrow__list")

mixin subField(options)
    -
        let inputField = ("input")
        if(Boolean(options.inputField) == true) {
            inputField += ` ${options.inputField}`
        } else {
            inputField = inputField
        }

        let inputClass = ("input__content")
        if(Boolean(options.inputClass) == true) {
            inputClass += ` ${options.inputClass}`
        } else {
            inputClass = inputClass
        }

        let arrowSub = ("arrow__subscribe")
        if(options.isPurple == true) {
            arrowSub += ` arrow__subscribe_purple`
        }

    div(class = inputField)
        .input__description
            h3.main-title= options.title
            span(class = "input__subtitle")= options.subtitle
        div(class = "sub-wrapper input__content_middle")
            input(name = options.name, class = inputClass, type = options.type, placeholder = options.placeholder, id = options.id)
            div(class = "arrow sub-wrapper__arrow")
                div(class = arrowSub)
